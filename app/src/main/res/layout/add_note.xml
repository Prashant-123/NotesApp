<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_bg">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="New Note"
            android:textColor="@color/black"
            android:id="@+id/add_note_title"
            android:textSize="24sp"
            android:gravity="center"
            android:textAllCaps="true"/>

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_delete"
            android:scaleType="fitCenter"
            android:background="@color/transparent"
            android:id="@+id/delete_btn"
            android:layout_alignParentEnd="true"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:visibility="invisible"
            android:padding="16dp"
            />



    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="20dp"
        android:text="Description"
        android:textStyle="bold"
        android:textColor="@color/grey_700"
        android:textSize="16sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        android:padding="18dp"
        android:gravity="start"
        android:id="@+id/add_note_text"
        android:inputType="textMultiLine"
        android:text="Loren Ipsum Loren Ipsum Loren Ipsum Loren Ipsum Loren Ipsum Loren Ipsum Loren Ipsum Loren Ipsum Loren Ipsum Loren Ipsum Loren Ipsum Loren Ipsum Loren Ipsum Loren Ipsum Loren Ipsum Loren Ipsum Loren Ipsum Loren Ipsum "
        android:background="@drawable/note_edit_text_border"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="140dp"
        android:paddingRight="140dp"
        android:text="Add Note"
        android:id="@+id/add_note_btn"
        app:icon="@drawable/ic_add_note"
        android:layout_gravity="center"
        android:shadowColor="@color/grey_700"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@color/add_note_start"
        style="@style/Widget.MaterialComponents.Button"/>

</LinearLayout>